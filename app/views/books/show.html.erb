<main>
        <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
         <% if @user.profile_image.attached? %>
     <th><%= image_tag @user.get_profile_image(100,100) %></th>
         <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
         <% end %>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>


    <div class="row">
    <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
       <% end %>
    </div>

      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
	        <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book',class:"btn btn-success" %>
        <% end %>
      </div>

    </div>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
          <table class="table">
        <tbody>
        <tr>
         <td>
          
         <% if @user.profile_image.attached? %>
     <%= image_tag @user.get_profile_image(100,100) %>
         <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
         <% end %><br>
           <%= link_to @user.name, users_path(@book) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete,class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?" %>
          </td>
         </tr>
        </tbody>
       </table>



    </div>
  </div>
</div>
      </main>