
 <% if @book.errors.any? %>
  <%= @book.errors.count %>error due to white space
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<br><br>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>
  <br>  
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
  <br>
  <br>
  <span>
    <%= link_to "show", book_path(@book.id) %> | <%= link_to "back", '/books' %>
  </span>
   
  
  
<% end %>